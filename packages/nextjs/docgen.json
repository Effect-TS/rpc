{
  "exclude": ["src/internal/**/*.ts"],
  "parseCompilerOptions": {
    "strict": true,
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "paths": {
      "@effect/rpc": ["../rpc/src/index.ts"],
      "@effect/rpc/*": ["../rpc/src/*"],
      "@effect/rpc-http": ["../http/src/index.ts"],
      "@effect/rpc-http/*": ["../http/src/*"],
      "@effect/rpc-nextjs": ["./src/index.ts"],
      "@effect/rpc-nextjs/*": ["./src/*"]
    }
  },
  "examplesCompilerOptions": {
    "strict": true,
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "paths": {
      "@effect/rpc": ["../rpc/src/index.ts"],
      "@effect/rpc/*": ["../rpc/src/*"],
      "@effect/rpc-http": ["../http/src/index.ts"],
      "@effect/rpc-http/*": ["../http/src/*"],
      "@effect/rpc-nextjs": ["./src/index.ts"],
      "@effect/rpc-nextjs/*": ["./src/*"]
    }
  }
}
