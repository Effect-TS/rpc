{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "src",
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "target": "ES6",
    "incremental": true,
    "paths": {
      "@effect/rpc/*": ["./src/*.js"]
    },
    "composite": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "build", "lib"]
}
